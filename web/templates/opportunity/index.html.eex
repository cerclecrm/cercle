<!-- Content Header (Page header) -->
  <style>

  .tilt {
    transform: rotate(3deg);
    -moz-transform: rotate(3deg);
    -webkit-transform: rotate(3deg);
  }

  body {
    min-width: 1240px !important;
  }

  .container {
    min-width: 1240px !important;
  }
  .column_title {
    width: 220px;
    float: left;
    height: 50px;
    line-height:50px;
    padding-left:20px;
    color:#525252;
    margin-bottom:30px;
    text-align:center;
    font-size:18px;
  }
  .column {
    width: 220px;
    float: left;
    padding-bottom: 100px;
    border-right:1px solid #c5c5c5;
    padding-left:20px;
  }
  .portlet {
    margin: 0 1em 1em 0;
    padding: 0.3em;
  }
  .portlet-header {
    padding: 0.2em 0.3em;
    margin-bottom: 0.5em;
    position: relative;
  }
  .portlet-toggle {
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -8px;
  }
  .portlet-content {
    padding: 0.4em;
  }
  .portlet-placeholder {
    border: 1px dotted black;
    margin: 0 1em 1em 0;
    height: 50px;
  }

  .ui-widget-content{
    border: 1px solid #e0e0e0;
  }

  </style>
